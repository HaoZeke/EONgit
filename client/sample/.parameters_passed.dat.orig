[Default]
# The type of job to run. Current options are
# ProcessSearch and Minimization
JOB_TYPE=ProcessSearch

# describtion RANDOM_SEED
# -1 = time is used to seed the random generator
RANDOM_SEED=-1

# describtion POTENTIAL_TAG
# 1 = lennard-jones potential
# 2 = morse
# 3 = emt
# 4 = edip
# 5 = VASP
# 6 = Tersoff
# 7 = Stilling Weber
# 8 = Lenosky
# 9 = Lennard-jones binary
# 10 = Aluminum
# 12 = QSC
POTENTIAL_TAG=3

# describtion POTENTIAL_NO_TRANSLATION
# 0 = the system is free to translate
# 1 = translation of the system is prevented
POTENTIAL_NO_TRANSLATION=1

maximum_iterations=512

[ProcessSearch]
minimize_first=1

[Saddle_Point]
# describtion LOWEST_EIGENMODE_DETERMINATION_SP
# 1 = dimer method
# 2 = lanczos method
LOWEST_EIGENMODE_DETERMINATION=1

# Refine saddle point.
REFINE=1

# tweakable parameters
converged_Relax=0.001
converged=0.001
max_Energy=10.000000

[Hessian]
min_Displacement=0.250000
within_Radius_Displaced=3.500000

[Dimer]
rotations=2
